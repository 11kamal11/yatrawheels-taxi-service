<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Website Menu Item for Taxi Booking -->
        <record id="menu_taxi_booking" model="website.menu">
            <field name="name">Book a Taxi</field>
            <field name="url">/shop</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">50</field>
            <field name="website_id" ref="website.default_website"/>
        </record>
        
        <!-- Website Page for Taxi Booking -->
        <record id="taxi_booking_page" model="website.page">
            <field name="name">Taxi Booking</field>
            <field name="website_id" ref="website.default_website"/>
            <field name="url">/shop</field>
            <field name="view_id" ref="taxi_booking.taxi_booking_template"/>
            <field name="is_published">True</field>
            <field name="type">qweb</field>
            <field name="key">taxi_booking.taxi_booking_template</field>
        </record>
    </data>
</odoo>